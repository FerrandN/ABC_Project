package Package;
import java.util.Scanner;
public class kmToMilesPart3 {

	public static void main(String[] args) 
	{
		String userInput = null;
		String[] inputToParse = null;
		double valueToConvert;
		int numberCount = 0;

		Scanner sc = new Scanner(System.in);

		while (!userInput.equals("go"))
		{
			System.out.println("Please enter the value you want to convert seperated by a space");
			//user answer the question
			userInput = sc.next();
			//we then split into cases all the value and measure unit
			inputToParse[numberCount] = userInput;
			
			numberCount++;
		}
		sc.close();
	}

}
