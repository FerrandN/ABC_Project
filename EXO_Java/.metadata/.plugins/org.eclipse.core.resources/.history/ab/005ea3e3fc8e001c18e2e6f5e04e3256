		String[] userInputArray;
		boolean userQuit = false;
		boolean userGo = false;


		Scanner sc = new Scanner(System.in);

		while (!userQuit)
		{
			//on créé un tableau de 100 cases de mémoire pour y stocker les valeurs que va entrer l'utilisateur
			userInputArray = new String[100];
			int userCount = 0;
			
			while (!userGo)
			{
				System.out.println("Please enter value to convert");
				userInput = sc.nextLine();

				if (userInput.equals("go"))
				{
					userGo = true;
				}
				else
				{
					userInputArray[userCount] = userInput;
					userCount++;
				}
			}
			
			for (int i = 0 ; i < userCount; i++)
			{
				String value = userInputArray[i];
				convert(value);
			}

		}

	}

