package Package;
import java.util.Scanner;
public class forkGame 
{

	public static void main(String[] args)
	{
		int min = 0;
		int max = 0;
		double randomNumber = Math.random()*(max - min);
		String userInput;
		double userInputValue;
		
		double userMin=0;
		double userMax=100;
		
		boolean numberFound = false;
		
		Scanner sc = new Scanner(System.in);
		System.out.println("Try to guess the selected number between"+userMin+userMax+":)");
		
		while (!numberFound)
		{
		userInput = sc.nextLine();
		userInputValue = Double.parseDouble(userInput);
		
		if (userInputValue == randomNumber)
		{
			System.out.println("Well done!");
			numberFound = true;
		}
		else if (userInputValue < randomNumber)
		{
			userMin = userInputValue;
			System.out.println(userMin+"too low!");
		}
		else
		{
			userMax = userInputValue;
			System.out.println("too high !")
		}
		
		}
		sc.close();
	}
}
